<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dim_5dp">

    <ImageView
        android:id="@+id/logo_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/dim_50dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/change_psw_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_imageview"
        android:layout_marginBottom="@dimen/dim_30dp"
        android:gravity="center_horizontal"
        android:text="Change your Password"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_20dp" />

    <EditText
        android:id="@+id/old_psw_edittext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_50dp"
        android:layout_below="@+id/change_psw_textview"
        android:layout_marginBottom="@dimen/dim_5dp"
        android:hint="Old Password"
        android:password="true"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/new_psw_edittext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_50dp"
        android:layout_below="@+id/old_psw_edittext"
        android:layout_marginBottom="@dimen/dim_5dp"
        android:hint="New Password"
        android:password="true"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/confirm_newpsw_edittext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_50dp"
        android:layout_below="@+id/new_psw_edittext"
        android:layout_marginBottom="@dimen/dim_30dp"
        android:hint="Confirm New Password"
        android:password="true"
        android:textColor="@color/black" />

