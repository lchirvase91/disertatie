        <!--android:textColor="@color/black"-->
        <!--android:textSize="13dp" />-->

    <Button
        android:id="@+id/change_psw_button"
        android:layout_width="@dimen/dim_180dp"
        android:layout_height="@dimen/dim_50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/confirm_newpsw_edittext"
        android:text="Change Password"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_15dp" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="@dimen/dim_180dp"
        android:layout_height="@dimen/dim_50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/confirm_newpsw_edittext"
        android:text="Cancel"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_15dp" />

    <TextView
        android:id="@+id/alert_textview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_100dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/black" />
</RelativeLayout>